{
  "name": "my-sqlite-app",
  "version": "1.0.0",
  "description": "A simple application to manage todo items using SQLite and JavaScript.",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "docker:build": "docker build -t gymcloud-backend .",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "test": "jest --runInBand --watchman=false",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^4.13.23",
    "@clerk/express": "^1.7.31",
    "@prisma/client": "^6.16.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.0.0",
    "svix": "^1.76.1",
    "zod": "^4.1.9"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prisma": "^6.16.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ]
  }
}
