generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./gym.db"
}

model User {
  id          String   @id // Clerk user ID
  email       String   @unique
  fullName    String
  role        Role     @default(user)
  classes     Class[]  @relation("CreatedClasses")
  reservations Reservation[]
}

model Class {
  id              Int      @id @default(autoincrement())
  name            String
  description     String
  hour            DateTime
  spacesAvailable Int
  createdBy       User     @relation("CreatedClasses", fields: [createdById], references: [id])
  createdById     String   // Changed to String to match Clerk user ID
  reservations    Reservation[]
}

model Reservation {
  id      Int     @id @default(autoincrement())
  user    User    @relation(fields: [userId], references: [id])
  userId  String  // Changed to String to match Clerk user ID
  class   Class   @relation(fields: [classId], references: [id])
  classId Int
}

enum Role {
  admin
  user
}