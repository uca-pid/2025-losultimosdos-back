generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./gym.db"
}
model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  fullName  String
  role      Role
  classes   Class[] @relation("CreatedClasses")
  reservations Reservation[]
}

model Class {
  id              Int      @id @default(autoincrement())
  name            String
  description     String
  hour            DateTime
  spacesAvailable Int
  createdBy       User     @relation("CreatedClasses", fields: [createdById], references: [id])
  createdById     Int
  reservations    Reservation[]
}

model Reservation {
  id      Int   @id @default(autoincrement())
  user    User  @relation(fields: [userId], references: [id])
  userId  Int
  class   Class @relation(fields: [classId], references: [id])
  classId Int
}

enum Role {
  admin
  user
}